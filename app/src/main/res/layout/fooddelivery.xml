<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">

        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/imageback"
            android:contentDescription="@string/imagefood"
            android:src="@android:drawable/sym_def_app_icon" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView

                android:id="@+id/NameRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nameREst" />


            <TextView
                android:id="@+id/Restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NameRest"
                android:text="@string/description" />
        </RelativeLayout>

        <ImageButton

            android:id="@+id/Ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/imagefood" />

        <ImageButton
            android:id="@+id/Ranking5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/imagefood" />

        <ImageButton
            android:id="@+id/Ranking2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/imagefood" />

        <ImageButton
            android:id="@+id/Ranking3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/imagefood" />

        <ImageButton
            android:id="@+id/Ranking4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/imagefood" />


    </LinearLayout>

</LinearLayout>